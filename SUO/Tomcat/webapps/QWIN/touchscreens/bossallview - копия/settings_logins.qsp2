						<td nowrap class=tdHeaderSection>Пользователь</td>
						<td nowrap class=tdHeaderSection>Статус</td>		
					</tr>
<%
L=(${login}0)/10
V=(${value}0)/10
L=STRSTN(L)
IF(L GT 0 AND B GT 0)
	IF(L EQ 1)
		SETARRAY(1100 STRNTS(L)+STRSUB(ARRAY(1100) 2 1002))
	ELSE
		SETARRAY(1100 STRSUB(ARRAY(1100) 1 L-1)+STRNTS(V)+STRSUB(ARRAY(1100) L+1 1002))
IF(1 GT 2)
SETARRAY(1100 "")
A=MAX_LOGINS {колличество пользователей}
M=0
N=1
WHILE (N LE A)
BEGIN
	IF(N EQ ((N/2)*2))
		"<tr class=trDataRow1>"
	ELSE
		"<tr class=trDataRow0>"
	"<td nowrap class=tdDataRow>" LOGIN_NAME(N) "</td>" 
	 IF(STRSUB(ARRAY(1100) N N) EQ "0")
	BEGIN
		"<td nowrap class=tdDataRowC id=login_"N"><a><IMG onclick=change_login("N",1) SRC=yes.png border=0></a>"
	END
	ELSE
	BEGIN
		"<td nowrap class=tdDataRowC id=login_"N"><a><IMG onclick=change_login("N",0) SRC=no.png border=0></a>"
	END
	"</tr>"
	N=N+1
END
%>
			</table>
		</td>
		<td valign=top align=left></td>
	</tr>
	<tr>
		<td class=tdCopyright>Ритейл АСП (+7(495)953-05-08, +7(495)951-68-09)</td>
		<td class=tdVersion>Версия 4.2.9</td>
	</tr>
</table>

