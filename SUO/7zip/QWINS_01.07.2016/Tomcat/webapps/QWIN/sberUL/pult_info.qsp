function startTimeout()
{
setTimeout('reloadFunc()',3 * 1000 )
}
function reloadFunc()
{
 <%
   IF(Q GT 0 AND Q LT 50)
 	BEGIN
		 "location.href='?workstation="W"&matter="Q"&event="A"';"
	END
	ELSE
	BEGIN
		"location.href='?workstation="W"&event="A"';"
	END
	%>
}
function openPage(p) 
{
    parent.contents.location.href=p;
}
