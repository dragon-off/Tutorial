function alert1()
 {
  if(insert_msg.style.display=='none')
   {
    insert_msg.style.display='block';
    setTimeout('close()', 5000);
   }
  else 
   {
   insert_msg.style.display='none';
   }
 }
function alert2()
 {
  if(next.style.display=='none')
   {
    next.style.display='block';
   
   }
  else 
   {
   next.style.display='none';
   }
 }
function close()
 {
  insert_msg.style.display='none';
  next.style.display='none';
 }

